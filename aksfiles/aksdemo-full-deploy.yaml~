apiVersion: apps/v1beta1
kind: Deployment
metadata:
  name: aksdemo-model-deploy
spec:
  replicas: 1
  strategy:
    rollingUpdate:
      maxSurge: 1
      maxUnavailable: 1
  minReadySeconds: 5 
  template:
    metadata:
      labels:
        app: aksdemo-model-deploy
    spec:
      containers:
      - name: aksdemo-model-deploy
        image: mpfacr.azurecr.io/mpfplumber:c2
        ports:
        - containerPort: 80
        resources:
          requests:
            cpu: 250m
          limits:
            cpu: 500m
---
apiVersion: v1
kind: Service
metadata:
  name: aksdemo-model-deploy
spec:
  type: LoadBalancer
  ports:
  - port: 80
  selector:
    app: aksdemo-model-deploy
